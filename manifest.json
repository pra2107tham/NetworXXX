{
  "name": "LinkElevate",
  "description": "LinkElevate: Supercharge Your LinkedIn Growth with AI-Powered Insights",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png", 
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.tsx"]
    }
  ],
  "permissions": [
    "storage",
    "clipboardWrite"
  ],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ]
}
